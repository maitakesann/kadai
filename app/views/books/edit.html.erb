  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
    <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <%end%>
  <%end%>
  
  
  <%= form_with model:@book,local:true do |f| %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path(@book) %>
  <%end%>    